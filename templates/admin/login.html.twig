{% extends 'base.html.twig' %}

{% block title %}Admin Login{% endblock %}

{% block body %}
<div class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">Admin Login</h1>

    {% if error %}
        <div class="text-red-500">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('admin_login') }}" method="post">
        <div class="mb-4">
            <label for="username" class="block text-gray-700">Email:</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" class="border rounded w-full py-2 px-3">
        </div>

        <div class="mb-4">
            <label for="password" class="block text-gray-700">Password:</label>
            <input type="password" id="password" name="_password" class="border rounded w-full py-2 px-3">
        </div>

        <button type="submit" class="bg-primary text-white px-4 py-2 rounded">Login</button>
    </form>
</div>
{% endblock %}
