{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}
<div class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">Admin Dashboard</h1>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="bg-white shadow-md rounded-lg p-4">
            <h2 class="text-xl font-semibold mb-2">Manage Users</h2>
            <p>View, edit, and delete user accounts.</p>
            <a href="{{ path('admin_users_index') }}" class="bg-primary text-white px-4 py-2 rounded mt-2 inline-block">Manage Users</a>
        </div>

        <div class="bg-white shadow-md rounded-lg p-4">
            <h2 class="text-xl font-semibold mb-2">Manage Blogs</h2>
            <p>View, edit, and delete blog posts.</p>
            <a href="{{ path('admin_blogs_index') }}" class="bg-primary text-white px-4 py-2 rounded mt-2 inline-block">Manage Blogs</a>
        </div>

        <div class="bg-white shadow-md rounded-lg p-4">
            <h2 class="text-xl font-semibold mb-2">Manage Comments</h2>
            <p>View, edit, and delete comments.</p>
            <a href="{{ path('admin_comments_index') }}" class="bg-primary text-white px-4 py-2 rounded mt-2 inline-block">Manage Comments</a>
        </div>
    </div>
</div>
{% endblock %}
