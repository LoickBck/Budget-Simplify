{% extends 'base.html.twig' %}

{% block title %}Manage Users{% endblock %}

{% block body %}
<div class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">Manage Users</h1>
    <table class="min-w-full bg-white">
        <thead>
            <tr>
                <th class="py-2">Email</th>
                <th class="py-2">First Name</th>
                <th class="py-2">Last Name</th>
                <th class="py-2">Roles</th>
                <th class="py-2">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td class="border px-4 py-2">{{ user.email }}</td>
                    <td class="border px-4 py-2">{{ user.firstName }}</td>
                    <td class="border px-4 py-2">{{ user.lastName }}</td>
                    <td class="border px-4 py-2">{{ user.roles|join(', ') }}</td>
                    <td class="border px-4 py-2">
                        <a href="{{ path('admin_user_show', {'id': user.id}) }}" class="bg-green-500 text-white px-4 py-2 rounded">Edit</a>
                        <form action="{{ path('admin_user_delete', {'id': user.id}) }}" method="post" class="inline">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded">Delete</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
